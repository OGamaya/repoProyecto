// Auxiliar para la validación 1.6
operation visitarPanoramas()
{
    var visited : Map;
    var aux : Set;

  	aux.add(Panorama.allInstances().first());
  	while (aux.notEmpty()) {
  		var a = aux.first();
  	    visited.put(a.nombre, true);
  	    aux.remove(a);
  	    aux.addAll(a.hotspot.reject(h|visited.containsKey(h.dirige.nombre)).collect(h|h.dirige));
  	}
  	return visited;
}

